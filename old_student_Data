    private void btnsreachActionPerformed(java.awt.event.ActionEvent evt)                                          
    {                                              
        // Clear previous search results
 txtstuddetails.setText("");

    String phone_number = txtphnumber.getText().trim();

    if (phone_number.isEmpty()) {
        JOptionPane.showMessageDialog(this, "Phone number cannot be empty.");
        return;
    }

    try {
        // Connect to the database
        Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/student", "root", "sa123");

        // Prepare SQL query to fetch student details and photo
       String query = "SELECT s.name, s.email, s.birth_date, s.local_address, s.permanent_address, s.hometown, s.gender, s.college_name, " +
               "s.registration_date, GROUP_CONCAT(DISTINCT sub.subject_name SEPARATOR ', ') AS subjects, " +
               "MAX(img.photo) AS photo " +  // Aggregate the photo column
               "FROM students s " +
               "LEFT JOIN subjects sub ON s.student_id = sub.student_id " +
               "LEFT JOIN imagetable img ON s.student_id = img.student_id " +
               "WHERE s.phone_number = ? " +
               "GROUP BY s.student_id";




        PreparedStatement stmt = conn.prepareStatement(query);
        stmt.setString(1, phone_number);

        // Execute query
        ResultSet rs = stmt.executeQuery();

        if (rs.next()) {
            // Display student details
            String studentDetails = "Name: " + rs.getString("name") + "\n" +
                                    "Email: " + rs.getString("email") + "\n" +
                                    "Birth Date: " + rs.getString("birth_date") + "\n" +
                                    "Local Address: " + rs.getString("local_address") + "\n" +
                                    "Permanent Address: " + rs.getString("permanent_address") + "\n" +
                                    "Hometown: " + rs.getString("hometown") + "\n" +
                                    "College Name: " + rs.getString("college_name") + "\n" +
                                    "Subjects: " + rs.getString("subjects");
            txtstuddetails.setText(studentDetails);

            // Fetch and display the photo
            byte[] imgData = rs.getBytes("photo");
            if (imgData != null) {
                ImageIcon imgIcon = new ImageIcon(imgData);
                Image img = imgIcon.getImage().getScaledInstance(lbloldstudphoto.getWidth(), lbloldstudphoto.getHeight(), Image.SCALE_SMOOTH);
                lbloldstudphoto.setIcon(new ImageIcon(img));
            } else {
                lbloldstudphoto.setIcon(null);  // Clear the label if no photo is found
            }
        } else {
            JOptionPane.showMessageDialog(this, "No student found with this phone number.");
        }

        // Close resources
        rs.close();
        stmt.close();
        conn.close();

    } catch (SQLException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(this, "Error fetching data."+e);
    }
    
    }                                         

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             
        // TODO add your handling code here:
        
        
        
        try {
    Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/employee", "root", "sa123");

    String query = "INSERT INTO enquiries (student_id, enquiry_date, subjects) VALUES (?, ?, ?)";
    PreparedStatement pst = con.prepareStatement(query);

    // Set student_id (replace with actual student ID)
    int studentId = 1; // Replace with the actual student ID
    pst.setInt(1, studentId);

    // Set enquiry_date
    if (jDateChooser1.getDate() != null) {
        pst.setDate(2, java.sql.Date.valueOf(jDateChooser1.getDate().toInstant().atZone(ZoneId.systemDefault()).toLocalDate()));
    } else {
        pst.setNull(2, java.sql.Types.DATE);
    }

    // Set subjects (replace with actual subjects)
    String subjects = "Sample Subjects"; // Replace with actual subjects
    pst.setString(3, subjects);

    // Execute the insert
    pst.executeUpdate();

    JOptionPane.showMessageDialog(this, "Inserted successfully using PreparedStatement!!");
} catch (SQLException e) {
    JOptionPane.showMessageDialog(this, "Not able to insert!! " + e.getMessage());
}

        
    }                                        

