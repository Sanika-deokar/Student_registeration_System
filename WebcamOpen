    private void btnsaveActionPerformed(java.awt.event.ActionEvent evt)                                        
    {                                            
         flag=true;
         t=new Thread(this);
         t.start();
        try {
        FileInputStream fin=new FileInputStream("C:\\Users\\deoka\\OneDrive\\Documents\\NetBeansProjects\\FinalApplication\\Images1\\mypic.jpg");
        Connection con= DriverManager.getConnection("jdbc:mysql://localhost:3306/student", "root", "sa123");
        PreparedStatement pst=con.prepareStatement("insert into imagetable(photo) values(?)");
        pst.setBlob(1,fin);
        pst.executeUpdate();
        JOptionPane.showMessageDialog(this, "Photo Saved" );
    } catch (Exception e) {
        JOptionPane.showMessageDialog(this, "Error: " + e.getMessage());
    }

    }                                       

    private void btnclickActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             
        // TODO add your handling code here:
        flag=false;
        try{
            
            ImageIO.write(webcam.getImage(), "jpg", new File("C:\\Users\\deoka\\OneDrive\\Documents\\NetBeansProjects\\FinalApplication\\Images1\\mypic.jpg"));
            Image image=webcam.getImage();
            lblphoto.setIcon(new ImageIcon(image));
            JOptionPane.showMessageDialog(this,"CLICKED");
        } catch (IOException ex)
       {
           JOptionPane.showMessageDialog(this,"Error+"+ex);
       }
        
    }                                        

    private void btnFetchActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             
        flag = false; // Stop the webcam preview
try {
    // Database connection
    Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/student", "root", "sa123");

    // SQL query to fetch image by image_id
    String query = "SELECT photo FROM imagetable WHERE image_id = ?";
    PreparedStatement pst = con.prepareStatement(query);
    pst.setInt(1, Integer.parseInt(txtidimg.getText())); // Get the ID from the text field

    ResultSet rs = pst.executeQuery();

    if (rs.next()) {
        byte[] imgBytes = rs.getBytes("photo"); // Get image bytes (make sure the column name matches)

        // Convert byte array to image and display it on lblphoto
        ImageIcon imageIcon = new ImageIcon(imgBytes);
        lblphoto.setIcon(imageIcon); // Set the retrieved image on the label
    } else {
        // If no image is found for the given ID
        lblphoto.setIcon(null); // Clear the label
        JOptionPane.showMessageDialog(this, "No image found for the given ID");
    }

    rs.close();
    pst.close();
    con.close();
} catch (NumberFormatException e) {
    JOptionPane.showMessageDialog(this, "Please enter a valid number for the image ID");
} catch (Exception e) {
    JOptionPane.showMessageDialog(this, "Error: " + e.getMessage());
}

    
        
    }                                        

