    private void btnsubmitActionPerformed(java.awt.event.ActionEvent evt)                                          
    {                                              
        // TODO add your handling code here:
        String name=txtusername.getText();
        String pwd=txtpwd.getText();
        if(name.equals("root") && pwd.equals("sa123"))
        {
           Homepage.main(null);
        }
        else
        {

            JOptionPane.showMessageDialog(this,"Invalid Username or Password");
        }
    }                                         

    private void btnexitActionPerformed(java.awt.event.ActionEvent evt)                                        
    {                                            
       // TODO add your handling code here:
        System.exit(0);
    }                                       

    private void btnfpsdActionPerformed(java.awt.event.ActionEvent evt)                                        
    {                                            
        
       String newPassword = JOptionPane.showInputDialog(this, "Enter your new password:");
    
    if (newPassword != null && !newPassword.isEmpty()) {
               oldPassword = newPassword;  // Update old password with the new password
        JOptionPane.showMessageDialog(this, "Password changed successfully!");
    } else {
        JOptionPane.showMessageDialog(this, "Password cannot be empty!");
    }

    }                                       

